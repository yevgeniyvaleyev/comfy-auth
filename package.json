{
  "name": "comfy-auth",
  "version": "0.0.1",
  "author": "Yevgeniy Valeyev",
  "engines": {
    "node": "16.19.0",
    "npm": "8.19.3"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4201",
    "build": "npm run build:ssr",
    "build:prod": "ng build --prod",
    "heroku-postbuild": "npm run build:prod",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "badge": "node ./scripts/badge.js",
    "test:prod": "ng test --browsers=ChromeHeadless --watch=false --code-coverage && npm run badge",
    "dev:ssr": "ng run comfy-auth:serve-ssr",
    "serve:ssr": "node dist/comfy-auth/server/main.js",
    "build:ssr": "ng build && ng run comfy-auth:server:production",
    "prerender": "ng run comfy-auth:prerender",
    "postinstall": "npm run build:ssr"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.3.0",
    "@angular/cdk": "^14.0.0",
    "@angular/common": "^14.3.0",
    "@angular/compiler": "^14.3.0",
    "@angular/core": "^14.3.0",
    "@angular/forms": "^14.3.0",
    "@angular/material": "^14.0.0",
    "@angular/platform-browser": "^14.3.0",
    "@angular/platform-browser-dynamic": "^14.3.0",
    "@angular/platform-server": "^14.3.0",
    "@angular/router": "^14.3.0",
    "@nguniversal/express-engine": "^14.0.0",
    "bootstrap": "^5.3.2",
    "deepmerge": "^4.3.1",
    "express": "^4.18.2",
    "localstorage-polyfill": "^1.0.1",
    "rxjs": "^7.4.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.13",
    "@angular/cli": "^14.2.13",
    "@angular/compiler-cli": "^14.3.0",
    "@nguniversal/builders": "^14.0.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "^5.0.0",
    "@types/node": "^20.0.0",
    "istanbul": "^0.4.5",
    "istanbul-reporter-shield-badge": "^1.2.1",
    "jasmine-core": "^5.1.1",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "typescript": "~4.8.0"
  }
}
